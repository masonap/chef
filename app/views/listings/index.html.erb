<div class="jumbotron">
  <h1>Have an amazing chef <br>
      cook for you!</h1>
  <h2>Your very own personal chef</h2>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= "by Chef #{listing.user.name}" %></p>
            <p><%= number_to_currency(listing.price) %> per person</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>

<% if user_signed_in? %>
  <%= link_to "New Listing", new_listing_path, class: "btn btn-primary", data: { no_turbolink: true } %>
<% end %>

